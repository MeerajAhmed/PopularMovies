<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MovieListActivityFragment"
    tools:showIn="@layout/activity_movie_list">

    <GridView
        android:id="@+id/grid_view_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/grid_column_width"
        android:horizontalSpacing="@dimen/grid_vertical_space"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/grid_horizontal_space">

    </GridView>

</FrameLayout>
